{% extends "layout/base.html.twig" %}

{% block title %}{{ title }} - Phlag Admin{% endblock %}

{% block content %}
<div class="auth-container">
    <div class="auth-card">
        <h2>Login to Phlag</h2>
        
        {% if error %}
        <div class="alert alert-error">
            {{ error }}
        </div>
        {% endif %}

        {% if timeout_message %}
        <div class="alert alert-warning">
            {{ timeout_message }}
        </div>
        {% endif %}

        <form method="POST" action="{{ base_url }}/login" class="auth-form">
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
            
            <div class="form-group">
                <label for="username">Username</label>
                <input 
                    type="text" 
                    id="username" 
                    name="username" 
                    required 
                    maxlength="255"
                    autofocus
                    autocomplete="username"
                >
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    required
                    autocomplete="current-password"
                >
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>

        <div class="auth-links">
            <a href="{{ base_url }}/forgot-password">Forgot your password?</a>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
{# No JavaScript needed for login form #}
{% endblock %}
