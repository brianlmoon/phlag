{% extends "layout/base.html.twig" %}

{% block title %}{{ title }} - Phlag Admin{% endblock %}

{% block content %}
<div class="phlag-list">
    <div class="page-header">
        <h1>{{ title }}</h1>
        <div class="page-actions">
            <a href="{{ base_url }}/flags/create" class="btn btn-primary">Create New Flag</a>
        </div>
    </div>

    <div id="loading" class="text-center" style="padding: 3rem;">
        <p>Loading flags...</p>
    </div>

    <div id="phlag-table-container" class="hidden">
        <div class="search-container">
            <div class="search-input-wrapper">
                <input type="text" id="flag-search" placeholder="Search flags by name, description, or type..." autocomplete="off">
                <button id="search-clear" class="search-clear-btn hidden" title="Clear search">&times;</button>
            </div>
            <div id="results-counter" class="results-counter hidden">
                Showing <span id="visible-count">0</span> of <span id="total-count">0</span> flags
            </div>
        </div>
        
        <div id="no-results-message" class="no-results-message hidden">
            <p>No flags match your search.</p>
        </div>
        <table id="phlag-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th class="hide-mobile">Type</th>
                    <th class="hide-mobile">Environments</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="phlag-tbody">
                {# Populated by JavaScript #}
            </tbody>
        </table>

        <div id="empty-state" class="hidden text-center" style="padding: 3rem;">
            <p>No flags found.</p>
            <p><a href="{{ base_url }}/flags/create" class="btn btn-primary">Create your first flag</a></p>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script src="{{ base_url }}/assets/js/phlag.js"></script>
<script>
    // Initialize and load phlag list when page loads
    document.addEventListener('DOMContentLoaded', function() {
        PhlagManager.init('{{ api_url }}');
        PhlagManager.loadList();
    });
</script>
{% endblock %}
