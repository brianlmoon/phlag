{% extends "layout/base.html.twig" %}

{% block title %}{{ title }} - Phlag Admin{% endblock %}

{% block content %}
<div class="phlag-view">
    <div class="page-header">
        <h1>{{ title }}</h1>
        <div class="page-actions">
            <a href="{{ base_url }}/flags/{{ phlag_id }}/edit" class="btn btn-primary">Edit</a>
            <button id="delete-btn" class="btn btn-danger">Delete</button>
        </div>
    </div>

    <div id="loading" class="text-center" style="padding: 3rem;">
        <p>Loading flag details...</p>
    </div>

    <div id="phlag-details" class="hidden">
        <div class="card">
            <h2>Flag Information</h2>
            
            <div class="detail-grid">
                <div class="detail-item">
                    <label>Name:</label>
                    <span id="detail-name"></span>
                </div>

                <div class="detail-item">
                    <label>Description:</label>
                    <span id="detail-description"></span>
                </div>

                <div class="detail-item">
                    <label>Type:</label>
                    <span id="detail-type" class="badge"></span>
                </div>

                <div class="detail-item">
                    <label>Created:</label>
                    <span id="detail-created"></span>
                </div>

                <div class="detail-item">
                    <label>Last Updated:</label>
                    <span id="detail-updated"></span>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <h2>Environment Values</h2>
            <div id="environment-values-display">
                <p class="text-center">Loading environment values...</p>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ base_url }}/flags" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script src="{{ base_url }}/assets/js/phlag.js"></script>
<script>
    // Initialize and load phlag details
    document.addEventListener('DOMContentLoaded', function() {
        PhlagManager.init('{{ api_url }}');
        PhlagManager.loadSingle({{ phlag_id }});
        
        // Handle delete button
        document.getElementById('delete-btn').addEventListener('click', function() {
            PhlagManager.delete({{ phlag_id }});
        });
    });
</script>
{% endblock %}
